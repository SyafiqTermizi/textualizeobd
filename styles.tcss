Screen {
    #bar {
        dock: top;
        padding: 1 2;
        height: 5%;
        background: $secondary;
    }

    #grid {
        layout: grid;
        grid-size: 4;
    }

    Display {
        width: 100%;
        text-align: center;
        height: auto;
        padding: 1 2;
        background: $panel;
        border: wide $background;
        /* align: center middle; */

        & Digits {
            width: auto;
            color: $secondary;
        }
    }
}
